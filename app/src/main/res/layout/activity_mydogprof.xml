<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center_vertical"
            android:background="@drawable/pettranslate_bg_titlebar_191125"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="8dp"
                android:src="@drawable/pettranslate_btn_back_191125"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/xxlarge_text"
                android:textColor="@color/c_black15"
                android:text="프로필수정"/>

        </LinearLayout>

        <kr.core.bowwow.customWidget.CustomSpinner
            android:id="@+id/spn_breed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:overlapAnchor="false"
            android:popupBackground="@null"
            android:spinnerMode="dropdown"/>

        <kr.core.bowwow.customWidget.CustomSpinner
            android:id="@+id/spn_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@null"
            android:overlapAnchor="false"
            android:popupBackground="@null"
            android:spinnerMode="dropdown"/>

        <LinearLayout
            android:id="@+id/ll_britharea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@drawable/pettranslate_bg_edit_inputbg_191125"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_birth"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/xxxsmall_text"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical"
                android:textColor="@color/c_nortext"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_gravity="center"
                    android:src="@drawable/sel_spn_arrow"/>

            </FrameLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/btn_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/c_white"
            android:textSize="@dimen/xlarge_text"
            android:gravity="center"
            android:textStyle="bold"
            android:text="수정완료"
            android:background="@drawable/sel_btn_longbottom"/>

    </LinearLayout>

</layout>