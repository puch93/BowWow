<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="4dp" />
            <gradient
                android:startColor="#D5DBE2"
                android:centerColor="#D5DBE2"
                android:angle="270"
                android:centerY="0.75"
                android:endColor="#D5DBE2"
                 />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="4dp" />
                <gradient
                    android:startColor="#5990E3"
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="#9B79B5"
                    />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="4dp" />
                <gradient
                    android:angle="0"
                    android:startColor="#5990E3"
                    android:endColor="#9B79B5"
                    />
            </shape>
        </clip>
    </item>

</layer-list>